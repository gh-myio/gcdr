{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@domain/*": ["./domain/*"],
      "@services/*": ["./services/*"],
      "@controllers/*": ["./controllers/*"],
      "@repositories/*": ["./repositories/*"],
      "@middleware/*": ["./middleware/*"],
      "@shared/*": ["./shared/*"],
      "@dto/*": ["./dto/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
