{
  "name": "gcdr-api",
  "version": "1.0.0",
  "description": "GCDR - Global Central Data Registry API",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "offline": "serverless offline start",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "quality": "npm run lint && npm run test:coverage",
    "docker:build": "docker build -t gcdr-api .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f api",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "node dist/scripts/migrate.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/db/seed-runner.ts seed",
    "db:seed:clear": "tsx scripts/db/seed-runner.ts clear",
    "db:seed:verify": "tsx scripts/db/seed-runner.ts verify",
    "db:seed:list": "tsx scripts/db/seed-runner.ts list",
    "db:seed:menu": "tsx scripts/db/seed-runner.ts interactive"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/client-eventbridge": "^3.400.0",
    "@aws-sdk/lib-dynamodb": "^3.400.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.0",
    "helmet": "^8.0.0",
    "js-yaml": "^4.1.1",
    "postgres": "^3.4.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.16.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.18.17",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "serverless": "^3.34.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.46.0",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-split-stacks": "^1.14.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
