# =============================================================================
# GCDR API - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
PORT=3015
HOST=0.0.0.0
LOG_LEVEL=debug

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_DB=db_gcdr
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_PORT=5432

# Connection URL (used by the API)
DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5432/db_gcdr

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_ISSUER=gcdr
JWT_AUDIENCE=gcdr-api
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# CORS
# =============================================================================
# Use * for development, specific domains for production
CORS_ORIGIN=*

# =============================================================================
# Docker Compose
# =============================================================================
# API exposed port
API_PORT=3015

# Build target: production or development
BUILD_TARGET=production

# =============================================================================
# Email (Outlook/Microsoft 365)
# =============================================================================
# SMTP configuration for sending emails
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-email-password-or-app-password
SMTP_FROM_NAME=MyIO Platform
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Email feature toggle (set to false to disable email sending)
EMAIL_ENABLED=true

